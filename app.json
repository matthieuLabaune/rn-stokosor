{
  "expo": {
    "name": "Stokosor",
    "slug": "stokosor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "stokosor",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stokosor.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Stokosor utilise la caméra pour scanner les QR codes et codes-barres de vos objets.",
        "NSPhotoLibraryUsageDescription": "Stokosor utilise votre galerie pour ajouter des photos à vos objets."
      }
    },
    "android": {
      "package": "com.stokosor.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-sqlite",
      "expo-localization",
      [
        "expo-camera",
        {
          "cameraPermission": "Stokosor utilise la caméra pour scanner les QR codes et codes-barres."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Stokosor utilise votre galerie pour ajouter des photos à vos objets."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
